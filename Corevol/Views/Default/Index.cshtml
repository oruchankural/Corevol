@using Corevol.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<br />
<div class="container-fluid">
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {



            <tr>
                <td>@x.BirimID</td>
                <td>@x.BirimAd</td>
                <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-success">Sil</a></td>
                <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Default/BirimDetay/@x.BirimID " class="btn btn-info">Detaylar</a></td>

            </tr>
 }

    </table>
    <a href="/Default/YeniBirim" class="btn btn-info">Yeni Departman</a>
</div>

